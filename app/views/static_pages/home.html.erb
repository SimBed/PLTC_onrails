<div id="Parkcarousel" class="carousel slide carousel-fade" data-ride="carousel" data-interval="5000">
 
  <div class="carousel-inner">
    
	<div class="carousel-item active">
	    <%= image_tag("Game.jpg", alt: "Game in Progress", class:"d-block mx-auto w-75") %>
